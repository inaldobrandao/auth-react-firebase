{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source" : "index.html",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "no-cache"
          }
        ]
      },
      {
        "source" : "service-worker.js",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "no-cache"
          }
        ]
      }
    ]
  }
}
